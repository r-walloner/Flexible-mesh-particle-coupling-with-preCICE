<precice-configuration experimental="true">

  <data:scalar name="A-Data" />

  <mesh name="A-Mesh" dimensions="2">
    <use-data name="A-Data" />
  </mesh>

  <participant name="A">
    <provide-mesh name="A-Mesh" />
    <write-data name="A-Data" mesh="A-Mesh" />
  </participant>

  <participant name="B">
    <receive-mesh name="A-Mesh" from="A" api-access="true" />
    <read-data name="A-Data" mesh="A-Mesh" />
    <mapping:nearest-neighbor
      direction="read"
      from="A-Mesh"
      constraint="consistent">
    </mapping:nearest-neighbor>
  </participant>

  <m2n:sockets acceptor="A" connector="B" exchange-directory=".."/>

  <coupling-scheme:serial-explicit>
    <participants first="A" second="B" />
    <max-time value="4" />
    <time-window-size value="1" />
    <exchange data="A-Data" mesh="A-Mesh" from="A" to="B" />
  </coupling-scheme:serial-explicit>

</precice-configuration>
